{% extends 'base.html.twig' %}

{% block title %}
	Gestion des locations!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>
			Bienvenu(e) dans la page de la gestion de mes locations ! âœ…</h1>
<br/><br/>
<hr/>
<br/>
<div id="menu" class="menu">
<ul>
<li> <a href="{{ path('new_location') }}">Veuillez ajouter une nouvelle location !</a></li> 
<li> <a href="{{ path('newpageform_location') }}">Veuillez renplir le formulaire !</a></li> 

</ul>



</div>
		<table class="table">
			<tbody>
				{% for location in locations %}
					{# https://twig.symfony.com/doc/3.x/tags/for.html #}
					<tr>

<td>{{ location.id }}</td>
<td>{{ location.date|date("d/m/Y") }}</td>
<td>{{ location.titre }}</td>
<td>{{ location.categories }}</td>
<td>{{ location.image }}</td>
<td>{{ location.description }}</td>
<td>{{ location.valeur }}</td>
<td>{{ location.adresse }}</td>
<td>{{ location.accessibility }}</td>
<td>{{ location.statuts }}</td>
<td>{{ location.alaune }}</td>

{% else %}
					<tr>
						<td colspan="5">Vous n'avez pas d'enregistrement!
						</td>
						<td></td>
					</tr>
				{% endfor %}}
			</tbody>
		</table>
        
	</div>
{% endblock %}
